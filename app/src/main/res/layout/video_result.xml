<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.zhongcheng.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn_pass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="#bfbfbf"
        android:text="PASS"
        app:layout_constraintBottom_toBottomOf="@+id/btn_fail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_fail"
        app:layout_constraintTop_toTopOf="@+id/btn_fail" />

    <Button
        android:id="@+id/btn_fail"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="16dp"
        android:background="#bfbfbf"
        android:text="FAIL"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_notest"
        app:layout_constraintEnd_toStartOf="@+id/btn_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_text" />

    <Button
        android:id="@+id/btn_notest"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginBottom="180dp"
        android:background="#bfbfbf"
        android:text="No Test"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fail" />

    <EditText
        android:id="@+id/result_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_fail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>